 @model Multiple_Desk.Models.DTOs.UserRegisterDto
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<!-- HERO SECTION -->
<section class="py-5 mt-4" style="background-color:#FF9E2C;height:300px;">
    <div class="container text-center">
        <h1 class="display-5 fw-bold text-white mb-3 mt-5">
            @Localizer["Access Windows PC from Anywhere"]
        </h1>
        <p class="fs-5 fw-normal">
            <strong>@Localizer["Find the option that’s right for you"]</strong>
        </p>
    </div>
</section>

<!-- PRICING HEADING -->
<div class="text-center mt-5 mb-4">
    <h2 class="custom-text-color">@Localizer["Choose Your Plan"]</h2>
    <p class="text-muted">@Localizer["Best Value For Everyone"]</p>
</div>


<!-- PRICING CARDS -->
<div class="container mb-2 py-4 ">
    <div class="row g-5 justify-content-center mt-4">

        <!-- Free Plan -->
        <div class="col-md-4 order-2 order-md-1">
            <div class="card h-100 border-1 border-danger shadow-sm">
                <div class="card-body text-center">
                    <h3 class="fw-bold custom-text-color">@Localizer["Free"]</h3>
                    <p class="fw-bold">@Localizer["Free Forever"]</p>
                    <p>@Localizer["Available at no cost"]</p>
                    <p>@Localizer["Feature set for single-person"]</p>
                    <a asp-controller="Download" asp-action="FileDownload" class="btn btn-outline-danger w-100 mb-3">@Localizer["Download Now"]</a>
                    <h6 class="mt-3 fw-bold">@Localizer["Features"]</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">@Localizer["Basic Remote Access"]</li>
                        <li class="mb-2">@Localizer["Single Device"]</li>
                        <li class="mb-2">@Localizer["Multiple  Concurrent Session"]</li>
                        <li class="mb-2">@Localizer["Community Support"]</li>
                        <li class="mb-2">@Localizer["Clipboard synchronization"]</li>
                        <li >@Localizer["AES-256-GCM Encryption"]</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Standard Plan - Featured -->
        
        <div class="col-md-4 order-1 order-md-2 " style="position: relative; top: -70px;">
            <div class="card bg-danger border-1 border-bottom-0 rounded-0 rounded-top text-white fw-bold " style="height:70px;">
               <h4 class="mt-2 ms-2">@Localizer["Best Value"]</h4>
            </div>
            <div class="card h-100 border-1 border-danger shadow-sm border-top-0 bg-light rounded-top-0">
                <div class="card-body text-center">
                    <h3 class="fw-bold custom-text-color">@Localizer["Business"]</h3>
                    <p class="fw-bold">@Localizer["TBD"]</p>
                    <p>@Localizer["per month (billed annually)"]</p>
                    <p>@Localizer["Ideal for small teams and growing businesses"]</p>
                    <a href="#" class="btn btn-danger w-100 mb-3">@Localizer["Order Now"]</a>
                    <h6 class="mt-3  fw-bold">@Localizer["Features"]</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">@Localizer["Unlimited Devices"]</li>
                        <li class="mb-2">@Localizer["Priority Support"]</li>
                        <li class="mb-2">@Localizer["File Transfer"]</li>
                        <li class="mb-2">@Localizer["Session Recording"]</li>
                        <li >@Localizer["Everything from free tier"]</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Advanced Plan -->
        <div class="col-md-4 order-3 order-3">
            <div class="card h-100  border-1 border-danger shadow-sm">
                <div class="card-body text-center">
                    <h3 class="fw-bold custom-text-color">@Localizer["Corporate"]</h3>
                    <p class="fw-bold">@Localizer["TBD"]</p>
                    <p>@Localizer["per month (billed annually)"]</p>
                    <p>@Localizer["For enterprises needing advanced controls"]</p>
                    <a href="#" class="btn btn-outline-danger w-100 mb-3">@Localizer["Order Now"]</a>
                    <h6 class="mt-3  fw-bold">@Localizer["Features"]</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">@Localizer["All Standard Features"]</li>
                        <li class="mb-2">@Localizer["Audit Logs"]</li>
                        <li class="mb-2">@Localizer["Dedicated Manager"]</li>
                        <li class="mb-2">@Localizer["Custom Integrations"]</li>
                        <li >@Localizer["Everything from free and Business tier"]</li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>


<!-- HOW IT WORKS SECTION -->
<section class="py-5 mb-4">
    <div class="container text-center">
        <h2 class="display-5 fw-bold mb-4">@Localizer["How It Works"]</h2>
        <p class="fs-5 fw-normal mb-4">@Localizer["Get started in just a few simple steps"]</p>

        <div class="row justify-content-center g-4">
            <!-- Step 1: Download -->
            <div class="col-md-4">
                <div class="card h-100 shadow-sm text-center">
                    <div class="card-body">
                        <h5 class="fw-bold">@Localizer["Download"]</h5>
                        <p>@Localizer["Download the application and install it on your devices"]</p>
                        <i class="bi bi-box-arrow-down fs-1" ></i>
                    </div>
                </div>
            </div>
            <!-- Step 2: Connect -->
            <div class="col-md-4">
                <div class="card h-100 shadow-sm text-center">
                    <div class="card-body">
                        <h5 class="fw-bold">@Localizer["Connect"]</h5>
                        <p>@Localizer["Start accessing your Windows PC from anywhere, securely and smoothly"]</p>
                          <i class="bi bi-plug-fill fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger" id="registerModalLabel">Register For Free Download</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync("_UserRegister.cshtml")
            </div>
        </div>
    </div>
</div>

@if (TempData["StartDownload"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            window.location = '/Download/FileDownload';
        });
    </script>
}


@if (TempData["UseCreated"] != null)
{
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div id="liveToast" class="toast align-items-center text-white bg-success border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["UseCreated"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script>
        window.addEventListener('DOMContentLoaded', () => {
        var toastElement = document.getElementById('liveToast');
        if (toastElement) {
        var toast = new bootstrap.Toast(toastElement);
        toast.show();
        }
        });
    </script>
}

@if (TempData["ValidationError"] != null)
{
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div id="liveToast" class="toast align-items-center text-white bg-danger border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["ValidationError"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script>
        window.addEventListener('DOMContentLoaded', () => {
        var toastElement = document.getElementById('liveToast');
        if (toastElement) {
        var toast = new bootstrap.Toast(toastElement);
        toast.show();
        }
        });
    </script>
}