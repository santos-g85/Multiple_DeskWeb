 @model Multiple_Desk.Models.DTOs.UserRegisterDto

<!-- HERO SECTION -->
<section class="py-5 mt-4" style="background-color:#FF9E2C;">
    <div class="container text-center">
        <h1 class="display-5 fw-bold text-white mb-3">
            Access Windows PC from Anywhere
        </h1>
        <p class="fs-5 fw-normal">
            <strong>Find the option that’s right for you</strong>
        </p>
    </div>
</section>

<!-- PRICING HEADING -->
<div class="text-center mt-5 mb-4">
    <h2 class="custom-text-color">Multiple Desk Pricings</h2>
    <p class="text-muted">Best Value For Everyone</p>
</div>


<!-- PRICING CARDS -->
<div class="container mb-2 py-4 ">
    <div class="row g-4 justify-content-center">

        <!-- Free Plan -->
        <div class="col-md-4 order-2 order-md-1">
            <div class="card h-100 border-danger border-2 shadow-sm">
                <div class="card-body text-center">
                    <h3 class="fw-bold custom-text-color">Free</h3>
                    <p class="fw-bold">Free Forever</p>
                    <p>Available at no cost</p>
                    <p>Feature set for single-person.</p>
                    <a asp-controller="Download" asp-action="FileDownload" class="btn btn-outline-danger w-100 mb-3">Download Now</a>
                    <h6 class="mt-3 fw-bold">Features</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">Basic Remote Access</li>
                        <li class="mb-2">Single Device</li>
                        <li class="mb-2">Multiple  Concurrent Session</li>
                        <li class="mb-2">Community Support</li>
                        <li class="mb-2">Clipboard synchronization</li>
                        <li >AES-256-GCM Encryption</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Standard Plan - Featured -->
        <div class="col-md-4 order-1 order-md-2">
            <div class="card h-100 border-danger border-2 shadow-lg bg-light">
                <div class="card-body text-center">
                    <h3 class="fw-bold custom-text-color">Business</h3>
                    <p class="fw-bold">TBD</p>
                    <p>per month (billed monthly)</p>
                    <p>Ideal for small teams and growing businesses.</p>
                    <a href="#" class="btn btn-danger w-100 mb-3">Order Now</a>
                    <h6 class="mt-3  fw-bold">Features</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">Unlimited Devices</li>
                        <li class="mb-2">Priority Support</li>
                        <li class="mb-2">File Transfer</li>
                        <li class="mb-2">Session Recording</li>
                        <li >Everything from free tier</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Advanced Plan -->
        <div class="col-md-4 order-3 order-3">
            <div class="card h-100 border-danger border-2 shadow-sm">
                <div class="card-body text-center">
                    <h3 class="fw-bold custom-text-color">Corporate</h3>
                    <p class="fw-bold">TBD</p>
                    <p>per month (billed monthly)</p>
                    <p>For enterprises needing advanced controls.</p>
                    <a href="#" class="btn btn-outline-danger w-100 mb-3">Order Now</a>
                    <h6 class="mt-3  fw-bold">Features</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">All Standard Features</li>
                        <li class="mb-2">Audit Logs</li>
                        <li class="mb-2">Dedicated Manager</li>
                        <li class="mb-2">Custom Integrations</li>
                        <li >Everything from free and Business tier</li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>


<!-- HOW IT WORKS SECTION -->
<section class="py-5 mb-4">
    <div class="container text-center">
        <h2 class="display-5 fw-bold mb-4">How It Works</h2>
        <p class="fs-5 fw-normal mb-4">Get started in just a few simple steps</p>

        <div class="row justify-content-center g-4">
            <!-- Step 1: Download -->
            <div class="col-md-4">
                <div class="card h-100 shadow-sm text-center">
                    <div class="card-body">
                        <h5 class="fw-bold">Download</h5>
                        <p>Download the application and install it on your devices.</p>
                        <i class="bi bi-box-arrow-down fs-1" ></i>
                    </div>
                </div>
            </div>
            <!-- Step 2: Connect -->
            <div class="col-md-4">
                <div class="card h-100 shadow-sm text-center">
                    <div class="card-body">
                        <h5 class="fw-bold">Connect</h5>
                        <p>Start accessing your Windows PC from anywhere, securely and smoothly.</p>
                          <i class="bi bi-plug-fill fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger" id="registerModalLabel">Register For Free Download</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync("_UserRegister.cshtml")
            </div>
        </div>
    </div>
</div>

@if (TempData["StartDownload"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            window.location = '/Download/FileDownload';
        });
    </script>
}


@if (TempData["UseCreated"] != null)
{
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div id="liveToast" class="toast align-items-center text-white bg-success border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["UseCreated"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script>
        window.addEventListener('DOMContentLoaded', () => {
        var toastElement = document.getElementById('liveToast');
        if (toastElement) {
        var toast = new bootstrap.Toast(toastElement);
        toast.show();
        }
        });
    </script>
}

@if (TempData["ValidationError"] != null)
{
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div id="liveToast" class="toast align-items-center text-white bg-danger border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["ValidationError"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script>
        window.addEventListener('DOMContentLoaded', () => {
        var toastElement = document.getElementById('liveToast');
        if (toastElement) {
        var toast = new bootstrap.Toast(toastElement);
        toast.show();
        }
        });
    </script>
}